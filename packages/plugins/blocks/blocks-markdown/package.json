{
  "name": "@lowdefy/blocks-markdown",
  "version": "4.0.0-rc.9",
  "license": "Apache-2.0",
  "description": "Lowdefy markdown blocks.",
  "homepage": "https://lowdefy.com",
  "keywords": [
    "lowdefy",
    "lowdefy blocks",
    "markdown",
    "react-markdown",
    "lowdefy plugin"
  ],
  "bugs": {
    "url": "https://github.com/lowdefy/lowdefy/issues"
  },
  "contributors": [
    {
      "name": "Sam Tolmay",
      "url": "https://github.com/SamTolmay"
    },
    {
      "name": "Gerrie van Wyk",
      "url": "https://github.com/Gervwyk"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lowdefy/lowdefy.git"
  },
  "type": "module",
  "exports": {
    "./*": "./dist/*",
    "./blocks": "./dist/blocks.js",
    "./types": "./dist/types.js"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "swc src --out-dir dist --config-file ../../../../.swcrc --delete-dir-on-start && pnpm copyfiles",
    "clean": "rm -rf dist",
    "copyfiles": "copyfiles -u 1 \"./src/**/*\" dist -e \"./src/**/*.js\" -e \"./src/**/*.yaml\" -e \"./src/**/*.snap\"",
    "prepublishOnly": "pnpm build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@lowdefy/block-utils": "4.0.0-rc.9",
    "dompurify": "2.4.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "8.0.4",
    "react-syntax-highlighter": "15.5.0",
    "rehype-raw": "6.1.1",
    "remark-gfm": "3.0.1"
  },
  "devDependencies": {
    "@emotion/jest": "11.10.5",
    "@lowdefy/block-dev": "4.0.0-rc.9",
    "@lowdefy/jest-yaml-transform": "4.0.0-rc.9",
    "@swc/cli": "0.1.59",
    "@swc/core": "1.3.24",
    "@swc/jest": "0.2.24",
    "@testing-library/dom": "8.19.1",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.2.15",
    "copyfiles": "2.4.1",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.3",
    "jest-serializer-html": "7.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
