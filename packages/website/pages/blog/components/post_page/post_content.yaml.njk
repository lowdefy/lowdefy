# {% set blog_root = 'pages/blog/categories' %}
# {% set post_path = [blog_root, post.category, post.id] | join("/") %}
# {% set content_path = [post_path, "content.md"] | join("/") %}

id: post_content
type: Box
style:
  maxWidth: 800px
  marginBottom: 60px
layout:
  contentJustify: center
blocks:

  - id: post_header
    type: Html
    style:
      textAlign: center
    properties:
      html: |
        <h2 class="gradient-text">{{ post.title }}</h2>
        <h3>{{ post.description }}</h3>
  - id: post_image
    type: Img
    properties:
      src: 
        _var: post.image
      style:
        borderRadius: 20px
        width: 100%
        maxWidth: 800px
  - id: date
    type: Html
    style:
      marginTop: 10
      marginLeft: 10
      fontSize: 12
    properties:
      html: 
        _var: post.date
  - id: content
    type: Box
    style:
      padding: 20px 0 40px 0
    blocks:
      _ref:
        resolver: resolvers/mdResolver.js
        vars:
          content: 
            _ref: {{ content_path }}
  - id: post_footer
    type: Box
    layout:
      flex: 1 0 auto
    blocks:
      - id: avatar
        type: Avatar
        layout:
          flex: 1 0 40
        properties:
          size: 40
          src: {{ author.image }}
          alt: {{ author.name }}
      - id: details
        type: Html
        layout:
          flex: 1 0 auto
        style:
          marginLeft: 10
          fontSize: 12
        properties:
          html: |
            <b>{{ author.name }}</b>
            <p>{{ post.date }}</p>
