id: {{ id }}
type: Card
layout:
  _var: layout
properties:
  style:
    height: 100%
    '&:hover':
      boxShadow: 0px 5px 8px -3px rgba(0,0,0,0.1)
      border: '1px solid var(--primary-color)'
blocks:
  - id: title
    type: Html
    style:
      minHeight: 320
    properties:
      html: |
        <a href="{{ view}}" >
          <img style="width: 100%;" src="{{ image }}" alt="{{alt}}"/>
        </a>
        <h5 style="color:#1990FF;">
          {{ example }}
        </h5>
        <p>
          {{ desc }}
        </p>

  - id: git_button
    type: Button
    properties:
      title: View on GitHub
      icon: AiOutlineGithub
      type: link
      size: large
      block: true
      href: {{ git }}
