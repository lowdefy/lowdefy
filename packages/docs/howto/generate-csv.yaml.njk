                              params:
                                name: csvMake
                                args:
                                  - profiles.csv          # csv filename
                                  - - Username: booker12  # an array of data, usually a reference
                                      Identifier: 9012
                                      FirstName: Rachel
                                      LastName: Booker
                                    - Username: grey07
                                      Identifier: 2070
                                      FirstName: Laura
