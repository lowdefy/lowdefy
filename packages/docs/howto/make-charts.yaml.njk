                type: EChart
                properties:
                  option:
                    dataset:
                      source:
                        _state: chart_data.counts
                    xAxis:
                      type: category
                    yAxis:
                      type: value
                    series:
                      - type: line
                        encode:
                          x: day
                          y: value
          - id: bar_chart_card
            type: Card
            layout:
              span: 12
            blocks:
              - id: bar_chart
                type: EChart
