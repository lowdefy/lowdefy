id: "{{ pageId }}"
type: Box
events:
  onInit:
    - id: set_session_id
      type: SetGlobal
      skip:
        _not:
          _eq:
            - _global: session_id
            - null
      params:
        session_id:
          _random:
            type: string
            length: 16
properties:
  title: {{ pageTitle }}
blocks:
  - id: v3_alert
    type: Alert
    properties:
      banner: true
      description: <div style="text-align:center;">For version 3 apps find the docs <a href="https://docs-v3.lowdefy.com">here</a>.</div>
      closable: true
      showIcon: false
      type: info
  - id: {{ pageId }}_page
    type: PageSiderMenu
    properties:
      title: {{ pageTitle }}
      header:
        theme: light
      menu:
        forceSubMenuRender: true
      sider:
        width: 256px
        initialCollapsed:
          _or:
            - _eq:
                - _media: size
                - md
            - _eq:
                - _media: size
                - lg
      layout:
        style:
          background: '#FFFFFF'
      footer:
        style:
          background: '#FFFFFF'
          padding: 16px 0px 0px 0px
      breadcrumb:
        list:
          - _ref: version.yaml
      {% if section %}
          - {{ section }}
          - {{ pageTitle }}
      {% endif %}

    areas:
      header:
        blocks:
          _ref: templates/header.yaml
      footer:
        blocks:
          _ref:
            path: templates/footer.yaml.njk
            vars:
              hideFeedback:
                _var: hideFeedback
              filePath:
                _var: filePath
              pageId:
                _var: pageId

      content:
        justify: center
        blocks:
          - id: max_width
            type: Box
            layout:
              flex: 0 1 800px
            blocks:
              {% if pageTitle %}
              - id: page_title
                type: Title
                properties:
                  content:
                    _var: pageTitle
              {% endif %}
              - id: content
                type: Box
                layout:
                  contentGutter: 16
                blocks:
                  _var: content
